                  "    pm.expect(jsonData).to.have.property('rarity', '\\u0004');",
                  "    pm.expect(jsonData).to.have.property('price', 30000);",
                  "    pm.expect(jsonData).to.have.property('image_path', '/static/images/druid_butterfly_legendary.webp');",
                  "});"
                ]
